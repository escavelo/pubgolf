{
  "name": "pubgolf-web",
  "description": "Pub Golf Web App",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pubgolf/pubgolf.git",
    "directory": "web-app"
  },
  "scripts": {
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "deps:make": "run-p tailwind protoc",
    "lint": "eslint -c ./.eslintrc.js --ext .js,.svelte src",
    "lint:fix": "run-s 'lint -- --fix'",
    "protoc": "mkdir -p src/proto/ && run-s protoc:clean protoc:build",
    "protoc:build": "protoc -I=../proto ../proto/*.proto --js_out=import_style=commonjs:./src/proto --grpc-web_out=import_style=commonjs+dts,mode=grpcwebtext:./src/proto",
    "protoc:clean": "rm -f ./src/proto/*",
    "sapper:build": "sapper build",
    "sapper:dev": "sapper dev",
    "sapper:export": "sapper export",
    "tailwind": "npx tailwind build tailwind.config.css -o src/assets/css/tailwind.css",
    "build": "run-s deps:make sapper:build",
    "dev": "run-s deps:make sapper:dev",
    "export": "run-s deps:make sapper:export",
    "start": "node __sapper__/build",
    "test": "run-p --race dev cy:run"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "cookies": "^0.8.0",
    "dotenv": "^8.2.0",
    "google-protobuf": "^3.12.2",
    "grpc-web": "^1.0.0",
    "polka": "^1.0.0-next.9"
  },
  "devDependencies": {
    "css-loader": "^3.4.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-custom-alias": "^1.2.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "file-loader": "^6.0.0",
    "glob-all": "^3.1.0",
    "html-webpack-plugin": "^4.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "purgecss": "^1.4.2",
    "purgecss-webpack-plugin": "^1.6.0",
    "sapper": "^0.27.11",
    "style-loader": "^1.1.2",
    "svelte": "^3.20.1",
    "svelte-loader": "^2.9.0",
    "svg-inline-loader": "^0.8.0",
    "tailwindcss": "^1.2.0",
    "webpack": "^4.42.1",
    "webpack-pwa-manifest": "^4.1.1"
  }
}
