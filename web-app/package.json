{
  "name": "pubgolf-web",
  "description": "Pub Golf Web App",
  "version": "0.0.1",
  "scripts": {
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "protoc": "run-s protoc:clean protoc:build",
    "protoc:build": "protoc -I=../proto ../proto/*.proto --js_out=import_style=commonjs:./src/proto --grpc-web_out=import_style=commonjs,mode=grpcwebtext:./src/proto",
    "protoc:clean": "rm -f ./src/proto/*",
    "sapper:build": "sapper build",
    "sapper:dev": "sapper dev",

    "tailwind": "npx tailwind build static/tailwind.config.css -o static/tailwind.css",
    "build": "run-s protoc sapper:build",
    "dev": "run-s protoc tailwind sapper:dev",
    "export": "sapper export",
    "start": "node __sapper__/build",
    "test": "run-p --race dev cy:run",

    "postinstall": "run-p tailwind protoc"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "google-protobuf": "^3.6.1",
    "grpc-web": "^1.0.0",
    "js-cookie": "^2.2.1",
    "polka": "next",
    "sirv": "^0.4.0",
    "tailwindcss": "^1.1.3"
  },
  "devDependencies": {
    "browserify": "^16.2.2",
    "npm-run-all": "^4.1.5",
    "sapper": "^0.27.0",
    "svelte": "^3.0.0",
    "svelte-loader": "^2.9.0",
    "webpack": "^4.7.0"
  }
}
