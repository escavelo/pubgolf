#!/bin/bash

export $(egrep -v '^#' '.env' | xargs) 

docker run -v "${DB_MIGRATIONS_PATH}:/migrations" \
--network host \
migrate/migrate \
-path=/migrations/ \
-database "postgres://${DB_USER}:${DB_PASSWORD}@localhost:"\
"${HOST_DB_PORT:-5432}/${DB_NAME}?sslmode=${DB_SSL_MODE:-disable}" \
down -all=true

bin/migrate
